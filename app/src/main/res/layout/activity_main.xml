<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       >
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_gravity="end|top"
                android:src="@drawable/headerimage"
                android:contentDescription="mawhibaheader" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/lblWelcomeBack"
            android:textColor="@color/blue"
            android:visibility="invisible"
            android:text="Welcome Back :" />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_program_text"
            android:id="@+id/btn_program"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_calendar_text"
            android:id="@+id/btn_calendar"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_archive_text"
            android:id="@+id/btn_archive"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_login_text"
            android:id="@+id/btn_login"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="@string/btn_log_Out"
            android:id="@+id/btn_LogOut"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="@string/btn_Send_SMS"
            android:id="@+id/btn_SendSMS"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
</RelativeLayout>
